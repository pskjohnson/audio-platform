{
  "name": "audio-job-service",
  "version": "1.0.0",
  "description": "Service that accepts audio files and processes them.",
  "main": "server.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "docker compose -f docker/postgres/docker-compose.yml run --rm migrate",
    "db:up": "docker compose -f docker/postgres/docker-compose.yml up -d",
    "db:down": "docker compose -f docker/postgres/docker-compose.yml down",
    "db:reset": "docker compose -f docker/postgres/docker-compose.yml down -v && docker compose -f docker/postgres/docker-compose.yml up -d",
    "db:psql": "docker compose -f docker/postgres/docker-compose.yml exec db psql -U test_user -d jobs_db",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
