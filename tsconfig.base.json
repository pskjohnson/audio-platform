{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  }
}