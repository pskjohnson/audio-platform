{
  "name": "apps",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down",
    "api:dev": "npm --prefix api run dev",
    "worker:dev": "npm --prefix worker run dev",
    "dev": "npm-run-all -p infra:up api:dev worker:dev",
    "db:migrate": "docker compose run --rm migrate",
    "db:reset": "docker compose down -v postgres && docker compose up -d postgres && docker compose run --rm migrate",
    "db:psql": "docker compose -f docker/postgres/docker-compose.yml exec db psql -U test_user -d jobs_db",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.51.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
